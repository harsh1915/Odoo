<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="estate_property_offer_tree" model="ir.ui.view">
        <field name="name">Estate Property Offer</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type= "xml">
            <tree>
                <field name="price" />
                <field name="partner_id" />
                <field name="property_id" />
                <field name="status" />
            </tree>
        </field>
    </record>


    <record id="estate_property_tree" model="ir.ui.view">
        <field name="name">Estate Properties Name</field>
        <field name="model">estate.property</field>
        <field name="arch" type= "xml">
            <tree>
                <field name="name" />
                <field name="expected_price" />
                <field name="selling_price" />
            </tree>
        </field>
    </record>

    <record id="estate_property_form" model="ir.ui.view">
        <field name="name">Estate Properties Name</field>
        <field name="model">estate.property</field>
        <field name="arch" type= "xml">
            <form>
                <sheet>
                <group>
                    <group>
                        <field name= "name" />
                    </group>
                    <group>
                        <field name="property_type_id"/>
                        <field name="property_tag_id" widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="image" widget="image" class="oe_avatar"/>
                    </group>
                </group>
                    <notebook>
                        <page string= "desc">
                            <group>
                                <group>
                                    <field name= "description" />
                                    <field name= "postcode" />
                                </group>
                                <group>
                                    <field name= "date_availability" />
                                </group>
                            </group>
                        </page>
                        <page string= "price">
                            <group>
                                <field name="expected_price" />
                                <field name="selling_price" />
                            </group>    
                        </page>
                        <page string= "Property Details">
                            <group>
                                <group>
                                    <field name= "bedrooms" />
                                    <field name= "living_area" />
                                </group>
                                <group>
                                    <field name= "facades" />
                                    <field name= "garage" />
                                </group>
                                <group>
                                    <field name= "garden" />
                                    <field name= "garden_area" />
                                </group>
                                <group>
                                    <field name= "garden_orientation" />
                                </group>
                            </group>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="salesman_id" />
                                <field name="buyer_id" />
                            </group>
                        </page>
                        <page string="Offer">
                            <field name="property_offer_id" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_search" model="ir.ui.view">
        <field name="name">Estate Properties search</field>
        <field name="model">estate.property</field>
        <field name="arch" type= "xml">
            <search>
                <field name= "name" />
                <field name= "postcode" />
                <field name= "garage" />
                <filter name= "4 or more bedrooms" domain= "[('bedrooms', '>', 3)]" />
                <filter name= "without garage" domain= "[('garage', '=', False)]" />
                <filter name= "Atleast 3 bedrooms With Garden" domain= "[('bedrooms', '>', 2), ('garden', '=', True)]" />
                <group string="Group By">
                    <filter string="Postal Code" name="postcode" context="{'group_by' : 'postcode'}" />
                    <filter string="bedrooms" name="bedrooms" context="{'group_by' : 'bedrooms'}" />
                </group>
            </search>  
        </field>      
    </record>
</odoo>